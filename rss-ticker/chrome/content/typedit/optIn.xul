<?xml version="1.0"?>
<?xml-stylesheet type="text/css" href="chrome://global/skin/global.css"?>
<!DOCTYPE dialog [
	<!ENTITY % localLocale SYSTEM "chrome://rss-ticker/locale/typedit.dtd">
	%localLocale;
	<!ENTITY % backupLocale SYSTEM "chrome://rss-ticker-default-locale/content/typedit.dtd">
	%backupLocale;
]>
<dialog title="&typedIt.optInTitle;"
	id="typedit-opt-in-dialog"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	buttons="accept,cancel,disclosure"
	ondialogaccept="opener.RSSTICKER.typedItCollector.optInAccept(); return true;"
	ondialogcancel="opener.RSSTICKER.typedItCollector.optInCancel(); return true;"
	ondialogdisclosure="opener.RSSTICKER.typedItCollector.optInDisclosure(); window.close();"
	buttonlabelaccept="&typedIt.optInAccept;"
	buttonlabelcancel="&typedIt.optInDecline;"
	buttonlabeldisclosure="&typedIt.optInLater;"
	defaultButton="cancel">
	<hbox>
		<vbox>
			<image src="chrome://rss-ticker/content/skin-common/feed-icon-64.png" style="padding: 20px;"/>
		</vbox>
		<vbox style="width: 350px; padding-left: 20px;" align="center" pack="center">
			<description>&typedIt.optInDescription1;</description>
			<description>&typedIt.optInDescription2; &typedIt.optInDescription3;</description>
		</vbox>
	</hbox>
</dialog>